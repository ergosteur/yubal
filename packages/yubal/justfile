default:
    @just --list

# Run the CLI
cli *args:
    uv run yubal {{ args }}

# Install dependencies
install:
    uv sync

# Format code
format:
    uv run ruff format yubal

# Check formatting
format-check:
    uv run ruff format --check yubal

# Lint code
lint:
    uv run ruff check yubal

# Lint and fix
lint-fix:
    uv run ruff check --fix yubal

# Type check
typecheck:
    uv run ty check yubal

# Run tests with coverage
test *args:
    uv run pytest --cov=yubal --cov-report=term-missing {{ args }}

# Run all checks
check: format-check lint typecheck test
