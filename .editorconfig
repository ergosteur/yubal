root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.py]
indent_size = 4

[*.{ts,tsx,js,jsx,css,html}]
indent_size = 2

[*.json]
indent_size = 2

[*.{yml,yaml,toml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[justfile]
indent_size = 4
